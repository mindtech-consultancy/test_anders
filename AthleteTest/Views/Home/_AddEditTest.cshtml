@model Athlete.DAL.Model.AthleteTestMasterModel
<div style="max-width:1200px;" class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myModalLabel">Test Details</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-close"></i></button>
        </div>
        <div class="modal-body p-4">
            <div class="clearfix">
                <div class="row">
                    <form asp-action="SaveTest" id="frmTest">
                        <input type="hidden" id="hdnTestId" value="@Model.Id" asp-for="Id" />
                        <div class="form-group">
                            <label class="control-label">Test Type <span class="text-danger">*</span></label>
                            <select asp-for="TestTypeId" class="form-control" asp-items="(SelectList)ViewBag.lstTestType">
                                <option selected value="">--- Select Type ---</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Test Date  <span class="text-danger">*</span></label>
                            @if (Model.Id > 0)
                            {
                                <input asp-for="TestDate" class="form-control" type="date" />
                            }
                            else
                            {
                                <input asp-for="TestDate" class="form-control" type="date" value="" />
                            }
                        </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <label id="lblValidation" class="text-danger" style="display:none;">* fields are required</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal-footer text-left" id="dvButtons">
            <a class="btn btn-info text-white" id="aSaveTest" name="aSaveTest" onclick="javascript:return SaveTestDetails();">Save</a>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>

