@model List<Athlete.DAL.ViewModel.TestListViewModel>
@using Athlete.DAL.ViewModel
@{
    ViewData["Title"] = "Home Page";
}
<h2>Test List</h2>
<p>
    <a id="add" onclick="OpenTestModal(0);">Add Test</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Num Of Attendees</th>
            <th>Test Type</th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (TestListViewModel item in Model)
    {
        <tr>
            <td>@item.TestDate.ToString("MM/dd/yyyy")</td>
            <td>@item.NumOfAttendee</td>
            <td>@item.TestType</td>
            <td><a onclick="OpenTestModal(@item.Id);">Edit</a> | <a href="/Home/TestAttendees?Id=@item.Id">Attendees List</a> | <a onclick="DeteleTest(@item.Id)">Delete</a></td>
        </tr>
    }
</table>
@section Scripts{
    <script src="~/AthleteScript/TestDetails.js"></script>
}
